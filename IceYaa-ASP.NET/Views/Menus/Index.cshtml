@model IEnumerable<IceYaa_ASP.NET.Models.Menu>

@{
    ViewBag.Title = "Index";
}

<h2>Menu</h2>

<p>
    @Html.ActionLink("Create New Menu", "Create") <br />
    @using (Html.BeginForm())
    {
        <p> 
            Food Type: @Html.DropDownList("movieGenre", "All")        
            Food Name: @Html.TextBox("SearchString") <input type="submit" value="ค้นหา" />     
        </p>     
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
       
         <th>
            @Html.DisplayNameFor(model => model.FoodPrice)
        </th>
           
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodType)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FoodPrice)
        </td>
            
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
