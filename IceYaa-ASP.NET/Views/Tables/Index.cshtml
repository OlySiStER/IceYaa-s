@model IEnumerable<IceYaa.Models.Table>

@{
    ViewBag.Title = "Index";
}

<h2>Table</h2>

<p>
    @Html.ActionLink("Create New Table", "Create")
    @using (Html.BeginForm())
    {
    <p>
        Floor : @Html.DropDownList("movieGenre", "All")
        Table No. : @Html.TextBox("SearchString") <input type="submit" value="ค้นหา" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Floor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Floor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TableNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
