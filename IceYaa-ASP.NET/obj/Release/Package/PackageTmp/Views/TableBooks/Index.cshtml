@model IEnumerable<IceYaa_ASP.NET.Models.TableBook>

@{
    ViewBag.Title = "Index";
}

<h2>Booking Table</h2>


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Floor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Floor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TableNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        
        

        <td>
                @if( @Html.DisplayFor(modelItem => item.Status).ToString().Equals("Book")){
                    <script language="javascript">
                    @Html.ActionLink("BOOK", "Edit", new { id=item.ID },new { @disabled = "disabled"})
                    
                    </script>
                }
                else
                {
 
                    @Html.ActionLink("BOOK", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-xs" })
                    
                }

            
        </td>
    </tr>
}

</table>
